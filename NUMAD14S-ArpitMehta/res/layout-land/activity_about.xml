<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/app_background"
    android:baselineAligned="true" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/myName"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/name"
            android:layout_below="@+id/name"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/my_email"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email"
            android:layout_below="@+id/email"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/degree" />

        <TextView
            android:id="@+id/university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/degree"
            android:layout_below="@+id/degree"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/university" />

        <TextView
            android:id="@+id/imei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/university"
            android:layout_below="@+id/university"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="@string/imei_display_str" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="0.5" >
        
        <ImageView
            android:id="@+id/landscapeMyPhotoImgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/myPhoto"
            android:src="@drawable/head_shot" />

    </RelativeLayout>

</LinearLayout>